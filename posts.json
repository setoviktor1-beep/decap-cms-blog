---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": "{{ post.title | escape }}",
      "url": "{{ post.url }}",
      "date": "{{ post.date | date_to_xmlschema }}",
      "category": "{{ post.category }}",
      "tags": {{ post.tags | jsonify }},
      "description": "{{ post.description | escape }}",
      "cover": "{{ post.cover }}",
      "slug": "{{ post.slug }}"
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
